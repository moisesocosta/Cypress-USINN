FROM debian:7.5
LABEL org.opencontainers.image.authors="William Blankenship"

# Setup NodeSource Official PPA
RUN apt-get update && \
    apt-get install -y --force-yes \
      curl \
      apt-transport-https \
      lsb-release \
      build-essential \
      python-all \
      apt-get clean

RUN curl -sL https://deb.nodesource.com/setup | bash -
RUN apt-get install nodejs -y --force-yes && apt-get clean

ADD . /usr/src/
WORKDIR /usr/src/

CMD ["node","test.js"]
